<div>
 <div id = "statistics">
   <ul>
   <li><%=@comedians.average_age%></li>
   <li><%=@specials.average_run_time%></li>
   <li><%=@comedians.unique_cities.join%></li>
   <li><%=@specials.count%></li>
  </ul>
 </div>


 <div id = "comedian_stats">
 <% @comedians.each do |comedian| %>
   <ul class="comedians">
    <li><%=comedian.name%></li>
    <li><%=comedian.city%></li>
    <li><%=comedian.age%></li>
    <li><%=comedian.specials.count%></li>
    <% comedian.specials.each do |special| %>
    <ul class="specials">
      <li><%=special.name%></li>
      <li><%=special.run_time%></li>
      <img src=<%=special.image_url%> />
    </ul>
    <% end %>
   </ul>
<% end %>
</div>
